{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@@/package.json": ["package.json"]
    }
  },
  "include": ["./**/*.ts"],

  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
